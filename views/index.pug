include header.pug
html
  head
    meta(charset='utf-8')
    title Spoontastic
    link(rel="stylesheet" href="./main.css")
  body
    header
      nav
        ul
          li
            a(href='/') Home
          li
            a(href='/login') Login
    unless !user
      h2 Enter Search Terms:
        form(autocomplete="off" action="/spoonacularAPI/"+foodSearch method="GET")
          input(type="text" name="foodSearch" id="foodSearch") 
          button(onclick=`tryAPI(${foodSearch})`) Search
      #results
        ul(id="resultsList")
include footer.pug

